    <top>
        <VBox>
            <MenuBar fx:id="menuBar">
                <menus>
                    <Menu text="File">
                        <MenuItem text="New" />
                        <MenuItem text="Open" />
                        <MenuItem text="Save" />
                        <MenuItem text="Save As" />
                        <SeparatorMenuItem />
                        <MenuItem text="Exit" />
                    </Menu>
                    <Menu text="Edit">
                        <MenuItem text="Copy" />
                        <MenuItem text="Cut" />
                        <MenuItem text="Paste" />
                    </Menu>
                    <Menu text="Options">
                        <MenuItem text="1" />
                        <MenuItem text="2" />
                        <MenuItem text="3" />
                    </Menu>
                    <Menu style="-fx-alignment: bottom-right" text="Help">
                        <MenuItem disable="true" text="Search" />
                        <MenuItem text="Online Manual" visible="false" />
                        <SeparatorMenuItem />
                        <MenuItem text="About" />
                    </Menu>
                </menus>

            </MenuBar>
            <HBox>
                <Label style="-fx-font-size:16px; -fx-padding: 10px; -fx-border-insets: 10px; -fx-background-insets: 10px;" text="Search:" />
                <TextField prefWidth="700" style="-fx-font-size:16px; -fx-padding: 10px; -fx-border-insets: 10px; -fx-background-insets: 10px;">
                </TextField>
            </HBox>

        </VBox>
    </top>

    <left>
        <VBox>
            <padding>
                <Insets bottom="10" left="10" right="20" top="10" />
            </padding>
            <VBox id="search" prefHeight="400" prefWidth="500" style="-fx-background-color: blueviolet" />
        </VBox>
    </left>

    <center>
        <VBox>
            <padding>
                <Insets bottom="10" left="10" right="20" top="10" />
            </padding>
            <HBox>
                <Button prefHeight="40" prefWidth="80" text="IPTC" />
                <Box width="20" />
                <Button prefHeight="40" prefWidth="80" text="EXIF" />
            </HBox>
            <Box width="30" height="10" />
         <ChoiceBox prefWidth="150.0"></ChoiceBox>

        </VBox>
    </center>

    <bottom>

        <VBox>
            <padding>
                <Insets bottom="10" left="10" right="20" top="10" />
            </padding>
            <VBox id="bottom" prefHeight="200" prefWidth="800" style="-fx-background-color: pink" />
        </VBox>

    </bottom>

