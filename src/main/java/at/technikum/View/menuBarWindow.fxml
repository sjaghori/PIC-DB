<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.technikum.View.MenuBarController">  <HBox>
        <MenuBar fx:id="menuBar" HBox.hgrow="ALWAYS">
            <menus>
                <Menu fx:id="file_bar" text="File">
                    <MenuItem text="New" />
                    <MenuItem text="Open" onAction="#onChooseDirectory" />
                    <MenuItem text="Save" />
                    <SeparatorMenuItem />
                    <MenuItem text="Exit" onAction="#onExitButton"/>
                </Menu>
                <Menu fx:id="edit_bar" text="Edit">
                    <MenuItem text="Edit Photographers" onAction="#onEditPhotographer"/>
                </Menu>
            </menus>
        </MenuBar>
        <MenuBar fx:id="helpmenu">
            <Menu fx:id="help_bar" text="Help">
                <MenuItem disable="true" text="Search For Help" />
                <MenuItem text="Online Manual" visible="false" />
                <SeparatorMenuItem />
                <MenuItem text="About" fx:id="menu_item_about" onAction="#onClickAboutPage" />
            </Menu>
        </MenuBar>
    </HBox>
    <HBox>
        <Button fx:id="search_button" onMouseClicked="#onSearchButtonClicked" text="Search " textAlignment="CENTER">
         <font>
            <Font name="Arial" size="17.0" />
         </font></Button>
        <TextField fx:id="search_field" style="-fx-font-size:16px; -fx-padding: 10px; -fx-border-insets: 10px; -fx-background-insets: 10px;" HBox.hgrow="ALWAYS">
        </TextField>
    </HBox>

</VBox>
